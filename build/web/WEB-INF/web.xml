<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>databaseDriver</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
        <param-name>databasePath</param-name>
        <param-value>jdbc:derby://localhost:1527/javalabdb</param-value>
    </context-param>
    <context-param>
        <param-name>databaseUser</param-name>
        <param-value>labadmin</param-value>
    </context-param>
    <context-param>
        <param-name>databasePassword</param-name>
        <param-value>lab</param-value>
    </context-param>
    <servlet>
        <servlet-name>MorseConverter</servlet-name>
        <servlet-class>pl.polsl.java.lab.web.MorseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StandardServlet</servlet-name>
        <servlet-class>pl.polsl.java.lab.web.HistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveErrors</servlet-name>
        <servlet-class>pl.polsl.java.lab.web.ClearErrorsHistory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MorseConverter</servlet-name>
        <url-pattern>/Morse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StandardServlet</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveErrors</servlet-name>
        <url-pattern>/RemoveErrors</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
